{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true,
    "useUnknownInCatchVariables": false,

    "baseUrl": "./",
    "sourceMap": true,
  }
}